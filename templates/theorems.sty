    nobreak=true
  ]{claim}[claim]{Claim}
\aliascntresetthe{claim}
\providecommand*{\claimautorefname}{Claim}
\newaliascnt{proposition}{theorem}
\newmdtheoremenv[
    innertopmargin=0pt,
    backgroundcolor=gray!10,
    linecolor=black,
    roundcorner=5pt,
    linewidth=1pt,
    nobreak=true
  ]{proposition}[proposition]{Proposition}
