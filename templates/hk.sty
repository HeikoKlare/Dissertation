% LABELS IN GRAFIKEN
\makeatletter
\def\mylabel#1#2{\begingroup
    #2%
    \def\@currentlabel{#2}%
    \phantomsection\label{#1}\endgroup
}
\makeatother

% CONTRIBUTIONS
\makeatletter
\def\contributionlabel#1#2#3{\begingroup
    #2 (\textbf{#3})%
    \def\@currentlabel{\textbf{#3}}%
    \phantomsection\label{#1}\endgroup
}
\makeatother

