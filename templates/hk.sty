% Goal-Question-Metric
% 1: Frage
% 2: Metrik
\newcommand{\qm}[2]{
    \textit{Question:} #1\\
    \textit{Metric:} #2\\
}

% Goal-Question-Metric
% 1: Kategorie
% 2: Ziel
% 3: Frage
% 4: Metrik
\newcommand{\gqm}[4]{
    \textbf{Goal (#1): #2}\\
    \qm{#3}{#4}
}

